{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": [
      "es2015",
      "es2017",
      "es6",
      "es2015",
      "dom",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "outDir": "./build/",
    "sourceRoot": "./src/",
    "sourceMap": true,
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false
  },
  "exclude": [
    "build"
  ],
  "include": [
    "src",
    "scripts"
  ]
}
